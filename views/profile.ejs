<div class="container mt-3">
    <div class="card p-4 mx-auto border-0 shadow-sm vh-70" style="max-width: 800px;">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <h5 class="mb-0">Profile</h5>
        </div>

        <div class="card-body">
            <form id="profileForm" enctype="multipart/form-data">
                <input type="hidden" class="form-control" name="id" id="id">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="first name">First Name</label>
                        <input type="text" class="form-control" name="first_name" id="first_name">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="last name">Last Name</label>
                        <input type="text" class="form-control" name="last_name" id="last_name">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" id="email" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="mobile" class="form-label">Mobile</label>
                        <input type="text" class="form-control" name="mobile" id="mobile" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="mobile" class="form-label">Profile Photo</label>
                        <input type="file" class="form-control" name="profile_img" id="profile_img" accept="image/*" />
                    </div>
                    <div class="col-md-6 mb-3">
                       <img src="" alt="" class="img-thumbnail w-25" >
                    </div>
                </div>
                <div class="row">
                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-primary w-10">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>